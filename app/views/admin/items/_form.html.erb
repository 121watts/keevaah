<%= simple_form_for @item do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price, :input_html => { :value => item.unit_price_decimal }, as: :decimal %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to 'Cancel', admin_items_path, :class => 'btn' %>
  </div>
<% end %>
