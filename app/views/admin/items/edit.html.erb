<div class="page-border">
  <div class="page-header">
    <h1><%= @item.title %></h1>
    <% @item.errors.full_messages.each do |m| %>
      <%= m %><br/>
    <% end %>
  </div>
  <%= form_for @item, url: admin_item_path(@item) do |f| %>
    <%= f.label      :title %><br/>
    <%= f.text_field :title %><br/>
    <%= f.label      :description %><br/>
    <%= f.text_area  :description %><br/>
    <%= f.label      :price %><br/>
    <%= f.text_field :price, value: @item.unit_price_decimal %><br/>
    Add Category:
    <% categories.each do |category| %>
      <%= link_to category.name, admin_item_add_category_path(@item, category), :class => 'btn' %> |
    <% end %></br>
    <% @item.categories.each do |category| %>
      <%= category.name %>
      <%= link_to 'Delete', admin_item_delete_category_path(@item, category), :class => 'btn' %> <br/>
    <% end %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <div class="form-actions">
      <%= f.submit :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_items_path, :class => 'btn btn-danger' %>
    </div>
  <% end %>
</div>
