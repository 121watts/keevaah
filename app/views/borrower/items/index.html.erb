<div class="page-border">
  <div class="page-header">
    <h1>ITEMS!</h1>
    <%= link_to 'New', new_borrower_item_path, :class => 'btn btn-primary' %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Categories</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.title, borrower_item_path(item) %></td>
          <td><%= item.description %></td>
          <td><%= item.display_categories %></td>
          <td><%= item.unit_price_dollars %></td>
          <td>
            <%= link_to 'Edit', edit_borrower_item_path(item), :class => 'btn btn-primary' %>
            <% if item.retired? %>
              <%= link_to 'Activate', borrower_item_retire_path(item),
                :data => { :confirm => 'Are you sure?' },
                :class => 'btn btn-mini btn-success' %>
            <% else %>
              <%= link_to 'Retire', borrower_item_retire_path(item),
                :data => { :confirm => 'Are you sure?' },
                :class => 'btn btn-mini btn-warning' %>
            <% end %>
            <%= link_to 'Delete', borrower_item_path(item),
              :method => :delete,
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
