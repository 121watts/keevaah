<h1>Borrower Dashboard</h1>

<div id="Make a loan">
  <%= link_to "Apply For A New Loan", action: "new"  %>
</div>

<p>
  "Profile:"
  <%= current_user.first_name %><%= current_user.last_name %>
  <%= current_user.email %>
</p>

<div id="current_loans">
  <h3>Loans:</h3>
  <% @loans.each do |loan| %>
    <tr>
      <td><%= link_to loan.title, borrower_loan_path(loan) %></td>
      <td><%= loan.description %></td>
      <td><%= loan.amount %></td>
    </tr>
  <% end %>
</div>
