<div class="page-border">
  <div class="container" style="width: 100%">
    <h2>My Cart</h2>
    <table class="table table-striped">
      <tr>
        <th>Title</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Subtotal</th>
        <th>Remove?</th>
      </tr>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.title %></td>
          <td>(quantity)</td>
          <td><%= item.price_in_dollars %></td>
          <td>(Subtotal)</td>
          <td>
            <%= form_for(:cart, method: :delete) do |f| %>
              <%= f.hidden_field :item_id, value: item.id %>
              <%= f.submit "Remove", class: "btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= link_to "Checkout", new_order_path, class: 'btn btn-success' %>
  </div>
</div>
