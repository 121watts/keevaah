<div class="page-border">
  <div class="container" style="width: 100%">
    <%= link_to "<< Back to Menu", root_path %>
    <span id="my-cart-title"><h2>Contribution Confirmation</h2></span>
    <div id="contricution-confirmation">
      <h3>Congratulations!</h3>
      <h5>Thanks to your contribution, _____________________</h5>
      <p>
        Contributing to loans on Keevaah helps change lives every day. Look forward to email updates detailing the specifics of your loan recipients' life-changing............
      </p>
    </div>

    <table class="table table-striped table-hover">
      <tr>
        <th class="col-sm-1"></th>
        <th class="col-sm-2">Loan</th>
        <th class="col-sm-1">Contribution Amount</th>
        <th class="col-sm-4">Loan Progress</th>
        <th class="col-sm-1"></th>
      </tr>
        <% @contributions.each do |contribution| %>
          <td><%= link_to (image_tag(contribution.loan.image.url(:small))), loan_path(contribution.loan) %></td>
          <td><%= link_to "#{contribution.loan.title}", loan_path(contribution.loan) %></td>
          <td><%= number_to_currency(contribution.amount.to_i/100) %></td>
          <td><div class="progress-big">
            <div class="progress-bar progress-bar-success"
              role="progressbar"
              aria-valuenow="60"
              aria-valuemin="0"
              aria-valuemax="100"
              style="width: <%=contribution.loan.progress%>%;">
              <%=contribution.loan.progress%>%</div>
            <div class="progress-bar progress-bar-info"
              role="progressbar"
              aria-valuenow="60"
              aria-valuemin="0"
              aria-valuemax="100"
              style="width: <%=contribution.progress %>%;">
              <%=contribution.progress%>%</div>
          </div></td>
          <td></td>
        <% end %>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td><span>TOTAL:</span> <span id="cart-total"><strong><%= number_to_currency(25.00) %></strong></span></td>
        </tr>
      </table>
    <div id="checkout-button"><%= link_to "Home", root_path, class: 'btn btn-info' %></div>
    <div class="loans transitions-enabled">
      <%= render partial: 'loan_box', collection: @loans, as: :loan %>
    </div>


  </div>
</div>
