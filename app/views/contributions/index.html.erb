<div class="page-border">
  <div class="page-header">
      <h1>The People You Support</h1>
      <div id="profile">
        <%= link_to "Edit My Profile", edit_user_path(current_user), :class => 'btn-xs btn-primary' %><br/><br/>
        <%= current_user.first_name %><%= current_user.last_name %>
        <%= current_user.email %>
      </div>
    </div>
  <div class="lender col-xs-12">
    <div class="loans transitions-enabled">
      <%= render partial: 'lender_box', collection: @contributions, as: :contribution %>
    </div>
  </div>
  <div class="lender-total col-xs-12">TOTAL:
    <%= number_to_currency(@contribtuion_total) %>
  </div>
</div>
